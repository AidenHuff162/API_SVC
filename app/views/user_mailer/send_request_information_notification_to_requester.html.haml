- _initials = ""
- _img_src = ""
-if @requested_to.picture.present?
  -_img_src = @requested_to.picture
-else
  -_initials = @requested_to_first_name[0].try(:upcase) + ' ' + @requested_to.last_name[0].try(:upcase)
- _header_text = @requested_to_first_name + " " + @requested_to.last_name
- _email_title = I18n.t('mailer.send_request_information_notification_to_requester.subject')
- _para_ = "Hey #{(@requester.preferred_name || @requester.first_name)},<br/><div style='margin-top: 5px;'>#{@requested_to.display_name} has finished completing the following:<br/></div><ul>"
- @profile_fields.each do |profile_field|
  - _para_ = _para_ + "<li><b>#{profile_field}</b></li>"
- _para_ = _para_ + '</ul>Use the link below to review ' + (@requested_to.preferred_name || @requested_to.first_name) + "'s profile.<br/><div style='margin-top: 5px; margin-bottom: 6px;'>Thank you!</div>"
- _email_body_html = _para_
- _footer_plain = ""
- _footer_linked = ""
- _footer_link_to = ""
- _body_button_text = I18n.t('mailer.send_request_information_notification_to_requester.link_below')
- _body_button_color = @company.email_color || "#3F1DCB"
- _body_button_link = 'https://' + @company.app_domain + '/#/profile/' + @requested_to.id.to_s

= render "mail_template", locals: {img_src: _img_src,header_text: _header_text, email_title: _email_title, email_body_html: _email_body_html, body_button_text: _body_button_text, body_button_color: _body_button_color, body_button_link: _body_button_link, footer_plain: _footer_plain, footer_linked: _footer_linked, footer_link: _footer_link_to, initials: _initials}
