- _initials = ""
- _company_logo = true
- _img_src = @company.logo
- _header_text = @company.name
- _email_title = I18n.t('mailer.invite_user.header_top')
- _email_body_html = '<table align="left" border="0" cellpadding="0" cellspacing="0" class="mcnTextContentContainer" style="max-width:100%; min-width:100%;" width="100%"><tbody><tr><td class="" style="padding-top:0; padding-bottom:9px;" valign="top">'+ (@email_desc.present? ? CGI.unescapeHTML(@email_desc).html_safe : '') + '</td></tr></tbody></table>'
- _body_button_text = I18n.t('mailer.invite_user.get_started')
- _body_button_color = @company.email_color || "#3F1DCB"
- if @google_auth_enable
  - _body_button_link = @redirect_url
- else
  - _body_button_link = edit_password_url(@user, reset_password_token: @token, config: @client_config, redirect_url: @redirect_url).html_safe
- _footer_plain = ""
- _footer_linked = ""
- _footer_link_to = ""

= render "mail_template", locals: {img_src: _img_src,header_text: _header_text, email_title: _email_title, email_body_html: _email_body_html, body_button_text: _body_button_text, body_button_color: _body_button_color, body_button_link: _body_button_link, footer_plain: _footer_plain, footer_linked: _footer_linked, footer_link: _footer_link_to, initials: _initials, company_logo: _company_logo}
