- _initials = ""
- _img_src = ""
-if @manager.picture.present?
  -_img_src = @manager.picture
-else
  -_initials = @manager_first_name[0].try(:upcase) + @manager.last_name[0].try(:upcase)
- _header_text = @manager_first_name + ' ' + @manager.last_name
- _email_title = I18n.t('mailer.notify_account_creator_about_manager_form_completion_email.subject')
- _email_body_html = CGI.unescapeHTML(@email_desc).html_safe
- _footer_plain = ""
- _footer_linked = ""
- _footer_link_to = ""

- _body_button_text = I18n.t('mailer.notify_account_creator_about_manager_form_completion_email.link_below')
- _body_button_color = @company.email_color || "#3F1DCB"
- _body_button_link = 'https://' + @company.app_domain + '/#/profile/' + @user.id.to_s

= render "mail_template", locals: {img_src: _img_src,header_text: _header_text, email_title: _email_title, email_body_html: _email_body_html, body_button_text: _body_button_text, body_button_color: _body_button_color, body_button_link: _body_button_link, footer_plain: _footer_plain, footer_linked: _footer_linked, footer_link: _footer_link_to, initials: _initials}
