- _initials = ""
- _img_src = ""
-if @inviter.picture.present?
  -_img_src = @inviter.picture
-else
  -_initials = @inviter_first_name[0].try(:upcase) + @inviter.last_name[0].try(:upcase)

- _header_text = @inviter_first_name + " " + @inviter.last_name
- _email_title = I18n.t('mailer.added_to_workspace_email.header_top', inviter_first_name: @inviter_first_name)

- _email_body_html = I18n.t('mailer.added_to_workspace_email.body', workspace_name: @workspace.name, url: @url)

- _footer_plain = ""
- _footer_linked = ""
- _footer_link_to = ""

- _body_button_text = I18n.t('mailer.added_to_workspace_email.link_below')
- _body_button_color = @company.email_color || "#3F1DCB"
- _body_button_link = @url

= render "mail_template", locals: {img_src: _img_src,header_text: _header_text, email_title: _email_title, email_body_html: _email_body_html, body_button_text: _body_button_text, body_button_color: _body_button_color, body_button_link: _body_button_link, footer_plain: _footer_plain, footer_linked: _footer_linked, footer_link: _footer_link_to, initials: _initials}
