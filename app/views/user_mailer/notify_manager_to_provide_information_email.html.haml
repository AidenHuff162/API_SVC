- _initials = ""
- _img_src = ""
-if @user.picture.present?
  -_img_src = @user.picture
-else
  -_initials = @user_first_name[0].try(:upcase) + @user.last_name[0].try(:upcase)
- _header_text = @user_first_name + " " + @user.last_name
- _email_title = I18n.t('mailer.notify_manager_to_provide_information_email.subject')
- _email_body_html = @email_desc.present? ? CGI.unescapeHTML(@email_desc).html_safe : I18n.t('mailer.notify_manager_to_provide_information_email.body', first_name: @user_first_name, last_name: @user.last_name, hire_start_date: @user.start_date.strftime('%b %d, %Y'), company: @company.name).html_safe
- _footer_plain = ""
- _footer_linked = ""
- _footer_link_to = ""
- _manager_email_flag = true

- _body_button_text = I18n.t('mailer.notify_manager_to_provide_information_email.link_below')
- _body_button_color = @company.email_color || "#3F1DCB"
-if @test_email || !@manager_form_email
  - _body_button_link = 'https://' + @company.app_domain + '/#/team/' + @user.manager_id.to_s + '?id=' + @user.id.to_s
-if !@test_email && @manager_form_email
  - _body_button_link = 'http://' + @company.app_domain + '/#/manager_form/' + @user.id.to_s + '/' + @token
= render "mail_template", locals: {img_src: _img_src,header_text: _header_text, email_title: _email_title, email_body_html: _email_body_html, body_button_text: _body_button_text, body_button_color: _body_button_color, body_button_link: _body_button_link, footer_plain: _footer_plain, footer_linked: _footer_linked, footer_link: _footer_link_to, initials: _initials, manager_email_flag: _manager_email_flag}
