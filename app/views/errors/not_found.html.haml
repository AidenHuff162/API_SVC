%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:o" => "urn:schemas-microsoft-com:office:office", "xmlns:v" => "urn:schemas-microsoft-com:vml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / NAME: SUBSCRIBER ALERT
    /[if gte mso 15]
      <xml>
      <o:OfficeDocumentSettings>
      <o:AllowPNG/>
      <o:PixelsPerInch>96</o:PixelsPerInch>
      </o:OfficeDocumentSettings>
      </xml>
    %meta{:charset => "UTF-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title= I18n.t('mailer.time_off.sapling')
    = favicon_link_tag 'general/favicon.ico'
    %link{:href => "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700", :rel => "stylesheet"}/
    / ////// OUTLOOK-SPECIFIC STYLES /////
    /[if gte mso 7]
      <style type="text/css">
      </style>
    :css
          .sapling {
            border: 1px solid #3F1DCB;
            background-color: #3F1DCB !important;
            color: #FFFFFF !important;
            font-weight: 400;
            font-family: 'Roboto', 'Helvetica Neue', 'Arial', sans-serif;
            min-height: 24px;
            display: inline-block;
            padding-top: 5px;
            padding-right: 20px;
            padding-left: 20px;
            line-height: 24px;
            padding-bottom: 5px;
            text-decoration:none;
            font-size: 14px;
            letter-spacing: 1px;
          }
          .close {
            letter-spacing: 1px;
            padding: 10px 20px;
            font-size: 14px;
            text-decoration: none;
            font-weight:400;
            color: #3F1DCB !important;
            font-family: 'Roboto', 'Helvetica Neue', 'Arial', sans-serif;
          }
          .close:active{
            color: #3F1DCB !important;
          }
          #activities-completed {
            padding-top: 110px;
          }
          .img-size{
            height: auto;
            width: 30%;
          }

          body{
            background-color: rgb(245, 245, 245);
          }


  %script{:language => "javascript", :type => "text/javascript"}
    function closeIt() {
    window.close();
    }

  %body
    %center
      %table#bodyTable{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%"}
        %tr
          %div#activities-completed(layout="column" layout-align="center center")
          = image_tag "general/404-image.svg", class: "mb-5 img-size"
        %tr
          %td{:align => "center"}
            %p{:style => "color: rgba(0,0,0,0.87); font-size: 22px; margin: 10px; padding-top:10px; font-weight:500; font-family: 'Roboto', 'Helvetica Neue', 'Arial', sans-serif;"}
              = I18n.t('admin.platform.error.went_wrong')
        %tr
          %td{:align => "center"}
            %p{:style => "color: rgba(0,0,0,0.87); font-size: 22px; margin: 10px; padding-top:10px; font-weight:300; font-family: 'Roboto', 'Helvetica Neue', 'Arial', sans-serif;"}
              = I18n.t('admin.platform.error.doesnot_exist')
              = @name
        %tr
          %td{:align => "center", :style => "padding-top: 20px; border-bottom: 1px solid #eee; ",}
            %a.md-button.sapling{:href => "/#/login"}
              = I18n.t('mailer.time_off.goto_profile')
