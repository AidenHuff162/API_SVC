<div class="datatable-margin">
  <div class="row">
    <div class="col-md-10">
      <h2 class="logging-title">  <%= @name %> Loggings </h2>
      <%= content_tag :table, role: :datatable, class: 'table table-bordered table-hover table-striped dataTable', data: {url: @url} do %>
        <thead>
          <tr>
            <th> Company Name </th>
            <th> Action </th>
            <th> Result </th>
            <th> Created At </th>
            <th>View</th>
          </tr>
        </thead>

        <tbody>
        </tbody>
      <% end %>
    </div>
    <div class="col-md-2 filters">
      
      <div class="form-group find-by-id">
        <label for="search">Find By ID:</label>
        <input id="general_search" type="text" onkeyup="general_button()" class="form-control">
      </div>
      <input type="hidden"  id="general_hidden" data-toggle="modal" data-target='#general_model'></button>
      <button type="button" onClick='show_general_logs(0)' id="search_button"  class="btn btn-primary" disabled >Search</button>
      <hr/>
      <h1 class="bold">Filters:</h1>
      <form autocomplete="off" onsubmit="return submit_filters()">
        <%= render partial: 'filters' %>
        <div class="form-group">
          <label for="result">Result:</label>
          <%= text_field_tag :result, params[:result], class: "form-control"  %>
        </div>
        <div class="form-group">
          <label for="action">Action</label>
          <%= text_field_tag :actions, params[:actions], class: "form-control"  %>
        </div>
        <div class="form-group">
          <label for="module">Module</label>
          <%= text_field_tag :module, params[:module], class: "form-control"  %>
        </div>
        <%= render partial: 'date_filters' %>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      
    </div>
  </div>
</div>

<div class="modal fade" id="general_model" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content modals-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= @name %> Log <a href="" id="general_href" style="margin-left: 5px;" target="_blank">View</a></h4>
      </div>
      <div class="modal-body">
        <form class="madals">
          <div class="form-group">
            <label for="company_name">Company Name:</label>
            <p id="pto_company_name" type="text" class="form-control" disabled >
          </div>
          <div class="form-group">
            <label for="company_domain">Company Domain:</label>
            <p id="pto_company_domain" type="text" class="form-control" disabled >
          </div>
          <div class="form-group">
            <label for="action">Action:</label>
            <p id="pto_action" type="text" class="form-control" disabled>
          </div>
          <div class="form-group">
            <label for="result">Result:</label>
            <p id="pto_result" type="text" class="form-control" disabled>
          </div>

          <div class="form-group">
            <label for="created_at">Created At:</label>
            <p id="pto_created_at" type="text" class="form-control" disabled>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

