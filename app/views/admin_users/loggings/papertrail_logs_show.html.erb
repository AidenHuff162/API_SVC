<%= render partial: 'layout' %> 
  <div class="logs">
    <h2>Papertrail Log</h2>
    <form class="madals">
      <div class="form-group">
        <label for="company_name">Company Name:</label>
        <p id="papertrail_company_name" type="text" class="form-control" disabled ><%= company_name(@version) %></p>
      </div>
      <div class="form-group">
        <label for="what">What:</label>
        <p id="papertrail_what" type="text" class="form-control" disabled><%= format_papertrail_event(@version) %></p>
      </div>
      <div class="form-group">
        <label for="who">Who:</label>
        <p id="papertrail_who" type="text" class="form-control" disabled><%= who_made_the_change(@version.whodunnit, true) %></p>
      </div>
      <div class="form-group">
        <label for="when">When:</label>
        <p id="papertrail_when" type="text" class="form-control" disabled><%= format_date(@version.created_at) %></p>
      </div>
      <div class="form-group">
        <label for="original_value">Original Value:</label>
        <p id="papertrail_original_value" type="text" class="form-control" disabled><%= inspect_change_set(@version, true) %></p>
      </div>
      <div class="form-group">
        <label for="new_value">New Value:</label>
        <p id="papertrail_new_value" type="text" class="form-control" disabled><%= inspect_change_set(@version, true) %></p>
      </div>
    </form>
  </div>
